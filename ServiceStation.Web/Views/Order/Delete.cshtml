@model ServiceStation.Data.Entities.Order

@{
    ViewBag.Title = "Delete";
}

<div class="panel panel-default">
	<div class="panel-heading">
        <h3>Are you sure you want to delete the following order?</h3>
    </div>
	<div class="panel-body">
        <h4>Order</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Car.VIN)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Car.VIN)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Date)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Date)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Amount)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Amount)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Status)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Status)
            </dd>

        </dl>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Delete" class="btn btn-default btn-primary" />
        }
    </div>
	<div class="panel-footer">
        @Html.ActionLink("Back to car details", "Details", "Car", new { id = Model.CarId }, new { @class = "btn btn-default" })
    </div>
</div>

